<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/settings_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <!-- profile section -->
        <TextView
            android:id="@+id/settings_profile_information_header"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Base.TextAppearance.AppCompat.Title"
            android:text="@string/settings_title_profile"/>

        <!-- notifications section -->
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Base.TextAppearance.AppCompat.Title"
            android:text="@string/settings_title_notifications"/>

        <Button
            android:id="@+id/button_notifications_rule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Base.TextAppearance.AppCompat.Button"
            android:text="@string/settings_title_notifications_rules" />

        <!-- GCM section -->
        <TextView
            android:id="@+id/settings_gcm_header"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Base.TextAppearance.AppCompat.Title"
            android:text="@string/settings_title_gcm"/>

        <LinearLayout
            android:id="@+id/gcm_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_weight="1"
                    style="@style/Base.TextAppearance.AppCompat.Caption"
                    android:text = "@string/settings_use_gcm"
                    android:labelFor = "@+id/checkbox_useGcm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <CheckBox
                    android:id="@+id/checkbox_useGcm"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

        <!-- rooms section -->

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Base.TextAppearance.AppCompat.Title"
            android:text="@string/settings_title_rooms"/>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

            <TextView
                android:layout_weight="1"
                style="@style/Base.TextAppearance.AppCompat.Caption"
                android:text = "@string/settings_display_all_events"
                    android:labelFor = "@+id/checkbox_displayAllEvents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <CheckBox
                android:id="@+id/checkbox_displayAllEvents"
                android:layout_width="30dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="1"
                style="@style/Base.TextAppearance.AppCompat.Caption"
                android:text = "@string/settings_hide_unsupported_events"
                    android:labelFor = "@+id/checkbox_hideUnsupportedEvenst"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <CheckBox
               android:id="@+id/checkbox_hideUnsupportedEvenst"
                android:layout_width="30dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="1"
                style="@style/Base.TextAppearance.AppCompat.Caption"
                android:text = "@string/settings_sort_by_last_seen"
                    android:labelFor = "@+id/checkbox_sortByLastSeen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <CheckBox
                android:id="@+id/checkbox_sortByLastSeen"
                android:layout_width="30dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="1"
                style="@style/Base.TextAppearance.AppCompat.Caption"
                android:text = "@string/settings_display_left_members"
                    android:labelFor = "@+id/checkbox_displayLeftMembers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <CheckBox
                android:id="@+id/checkbox_displayLeftMembers"
                android:layout_width="30dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="1"
                style="@style/Base.TextAppearance.AppCompat.Caption"
                android:text = "@string/settings_display_public_rooms"
                    android:labelFor = "@+id/checkbox_displayPublicRooms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <CheckBox
                android:id="@+id/checkbox_displayPublicRooms"
                android:layout_width="30dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <Button
            android:id="@+id/button_clear_cache"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Base.TextAppearance.AppCompat.Button"
            android:text="@string/clear_cache" />

        <!-- bug reports section section -->
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Base.TextAppearance.AppCompat.Title"
            android:text="@string/settings_bugs_report"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="1"
                style="@style/Base.TextAppearance.AppCompat.Caption"
                android:text = "@string/settings_rage_shake"
                    android:labelFor = "@+id/checkbox_rageshake"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <CheckBox
                android:id="@+id/checkbox_rageshake"
                android:layout_width="30dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- configuration section -->

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Base.TextAppearance.AppCompat.Title"
            android:text="@string/settings_title_config"/>

        <TextView
            android:id="@+id/textView_matrixConsoleVersion"
            style="@style/Base.TextAppearance.AppCompat.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/textView_matrixSDKVersion"
            style="@style/Base.TextAppearance.AppCompat.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/textView_matrixBuildNumber"
            style="@style/Base.TextAppearance.AppCompat.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/textView_configUsers"
            style="@style/Base.TextAppearance.AppCompat.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- command section -->

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Base.TextAppearance.AppCompat.Title"
            android:text="@string/settings_title_commands"/>

        <TextView
            style="@style/Base.TextAppearance.AppCompat.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_command_commands"/>

    </LinearLayout>
</ScrollView>
